@model CoPortal.Login.LoginCredentials

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row valign-wrapper" style="padding-top:10px">
        <div class="col-lg-8 col-lg-offset-2 col-sm-12">
            <div class="card row">
                <div class="card-image col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
                    <img class="img-responsive" src="~/Content/img/coPortalLogo.jpg">
                </div>
                <div class="card-content">
                    <hr />
                    <div class="row">
                        <div class="input-field col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                            <input id="Username" name="Username" type="text" />
                            <label class="text-center" for="Username">Username</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                            <input id="Password" name="Password" type="password" />
                            <label class="text-center" for="Password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6 text-center">
                            <input type="submit" value="Login" class="btn center-align tg-btn" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


