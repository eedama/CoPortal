@model CoPortal.Models.Student

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <div class="card">
            <h4>Student</h4>
            <hr />
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Surname) @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StudentNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StudentNumber)
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-12 col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.IdNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IdNumber)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table">
                        <tr>
                            <th>Course Name</th>
                            <th>Course Code</th>
                            <th>Course description</th>
                            <th>Course paid for</th>
                            <th>view Course</th>
                        </tr>
                        @foreach (var item in Model.CourseEnrollments)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Course.Code)</td>
                                <td>@Html.DisplayFor(modelItem => item.Course.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeesPaid)</td>
                                <td>@Html.ActionLink("view", "CourseDetails", new { item.Course.Id })</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <p class="gradientBg">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
            </p>
        </div>
    </div>
</div>

