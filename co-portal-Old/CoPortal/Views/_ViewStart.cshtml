@{
    if (HttpContext.Current.Session["_Type"] == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if ((string)HttpContext.Current.Session["_Type"] == "ADMIN")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if ((string)HttpContext.Current.Session["_Type"] == "STUDENT")
    {
        Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    }
    else if ((string)HttpContext.Current.Session["_Type"] == "LECTURER")
    {
        Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    }
}
