    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.0",
    "@types/node-cron": "^2.0.2",
    "@types/nodemailer": "^6.2.2",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0",
    "tslint": "^5.20.1"
  }
}